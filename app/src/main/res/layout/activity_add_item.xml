<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".AddItemActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество проинструктированных"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/et_item_name"
            app:layout_constraintStart_toStartOf="@+id/et_item_name" />

        <TextView
            android:id="@+id/jobTexts"
            android:text="Должность"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Из них детей"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/et_brand"
            app:layout_constraintStart_toStartOf="@+id/et_brand" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/dateTextView"
            app:layout_constraintStart_toStartOf="@+id/dateTextView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адрес"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/address"
            app:layout_constraintStart_toStartOf="@+id/address" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Район"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/dateTextView3"
            app:layout_constraintStart_toStartOf="@+id/dateTextView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вид объекта"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тема профилактического мероприятия"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2" />

        <EditText
            android:id="@+id/et_item_name"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="Введите общее количество людей"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/dateTextView2"
            app:layout_constraintStart_toStartOf="@+id/dateTextView2"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView2" />

        <EditText
            android:id="@+id/et_brand"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="Введите количество детей"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/et_item_name"
            app:layout_constraintStart_toStartOf="@+id/et_item_name"
            app:layout_constraintTop_toBottomOf="@+id/et_item_name" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ФИО"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/dateTextView2"
            app:layout_constraintStart_toStartOf="@+id/dateTextView2" />

        <TextView
            android:id="@+id/dateTextView2"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingTop="12dp"
            android:paddingEnd="15dp"
            android:text="ФИО"
            android:textColor="@color/white"
            android:textColorHint="@color/grey2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/dateTextView"
            app:layout_constraintStart_toStartOf="@+id/dateTextView"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

        <TextView
            android:id="@+id/dateTextView3"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingTop="12dp"
            android:paddingEnd="15dp"
            android:text="Район"
            android:textColor="@color/white"
            android:textColorHint="@color/grey2"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/et_brand"
            app:layout_constraintTop_toBottomOf="@+id/et_brand" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingTop="12dp"
            android:paddingEnd="15dp"
            android:text="Время редактировать нельзя"
            android:textColor="@color/white"
            android:textColorHint="@color/grey2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="Введите адрес"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/dateTextView3"
            app:layout_constraintStart_toStartOf="@+id/dateTextView3"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView3" />

        <View
            android:id="@+id/view"
            style="@style/ButtonCome"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/address"
            app:layout_constraintStart_toStartOf="@+id/address"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:srcCompat="@drawable/ic_right" />

        <View
            android:id="@+id/view2"
            style="@style/ButtonCome"
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:srcCompat="@drawable/ic_right" />

        <Button
            android:id="@+id/btn_add_item"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:text="Отправить"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>